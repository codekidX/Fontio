<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_sheet_preview"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/preview_et"
        android:maxLength="40"
        android:layout_toLeftOf="@+id/change_preview_button"
        android:layout_toStartOf="@+id/change_preview_button"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:hint="Change quote"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <ImageButton
        android:id="@+id/change_preview_button"
        android:src="@drawable/check"
        android:tint="@color/colorPrimaryDark"
        android:background="@color/frail_white"
        android:foreground="@drawable/white_ripple"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_width="80dp"
        android:layout_height="80dp" />

</RelativeLayout>